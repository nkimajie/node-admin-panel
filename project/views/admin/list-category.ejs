
<%- include("partials/header") %>
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Dashboard</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Dashboard</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
       
               <!--/.col (left) -->
          <!-- right column -->
          <div class="col-md-12">
            <!-- general form elements disabled -->
            <div class="card card-dark">
              <div class="card-header">
                <h3 class="card-title">List Category</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="tbl-data-table" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>#ID</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                  </thead>
                  <tbody>
                    <% categories.forEach(function(data){ %>

                      <tr>
                        <td><%= data.id %></td>
                        <td><%= data.name %></td>
                        <td>
                          <% if(data.status == 1){ %>

                            <button class="btn btn-success">Active</button>

                          <% }else{ %>

                            <button class="btn btn-warning">In-active</button>

                          <% } %>
                        
                        </td>
                        <td>
                          <a href="/admin/edit-category/<%= data.id %>" class="btn btn-primary"><i class="fa fa-edit"></i></a>

                          <form action="/admin/delete-category" id="frm-delete-category-<%= data.id %>" method="post">
                            <input type="hidden" value="<%= data.id %>" name="category_id">
                          </form>

                          <a href="javascript:void(0)" onclick="if(confirm('Are you sure you want to delete ?')){ $('#frm-delete-category-<%= data.id %>').submit()}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                        </td>
                      </tr>

                    <% }) %>
                  </tbody>
                  <tfoot>
                  <tr>
                    <th>#ID</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                  </tfoot>
                </table>
              </div>


            </div>
            <!-- /.card -->
        
          </div>
          <!--/.col (right) -->

      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->

<%- include("partials/footer") %>

